@model IEnumerable<ShippingItem>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Shipping Items</h4>
            <a asp-action="Create">Create Shipping</a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="~/assets/images/shipping/icon/@item.Image" alt="image" />
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    <a asp-area="Admin" asp-controller="ShippingItem" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">
                                        <i class="mdi mdi-information-variant"></i>
                                    </a>
                                    <a asp-area="Admin" asp-controller="ShippingItem" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">
                                        <i class="mdi mdi-grease-pencil"></i>
                                    </a>
                                    <a asp-area="Admin" asp-controller="ShippingItem" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                        <i class="mdi mdi-delete-sweep"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

